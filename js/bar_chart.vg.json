{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"data": {
		"url": "https://raw.githubusercontent.com/Tzyinggggggg/3179_Assignment2/main/Data/TaxRate.csv"
	},
	"hconcat": [
		{
			"height": 3420,
			"width": 80,
			"params": [
				{
					"name": "highlight",
					"select": { "type": "point", "on": "mouseover" }
				}
			],
			"mark": {
				"type": "bar",
				"stroke": "white"
			},
			"transform": [
				{ "filter": { "param": "brush" } },
				{ "filter": "datum.Total_tax_rate > 0" }
			],
			"encoding": {
				"color": {
					"field": "Total_tax_rate",
					"type": "quantitative",
					"legend": null,
					"scale": {
						"range": ["#cae9b4", "#90d0ba", "#5ab4c2", "#3d8bbc", "#2f5aa6"]
					}
				},
				"y": {
					"field": "Country",
					"type": "nominal",
					"axis": { "minExtent": 100, "title": null },
					"sort": { "field": "Total_tax_rate", "order": "ascending" }
				},
				"x": {
					"field": "Total_tax_rate",
					"aggregate": "min",
					"scale": { "domain": [0, 100] },
					"axis": { "orient": "top", "title": "Percentage" }
				},
				"tooltip": [
					{ "field": "Country", "type": "nominal", "title": "Country" },
					{ "field": "Continent", "type": "nominal", "title": "Continent" },
					{
						"field": "Total_tax_rate",
						"type": "quantitative",
						"title": "Percentage Tax",
						"format": ".2f"
					}
				],
				"strokeWidth": {
					"condition": [
						{
							"param": "highlight",
							"empty": false,
							"value": 2
						}
					],
					"value": 0.7
				},
				"strokeOpacity": {
					"condition": [
						{
							"param": "highlight",
							"empty": false,
							"value": 1
						}
					],
					"value": 0.7
				}
			}
		},
		{
			"height": 1000,
			"width": 50,
			"params": [
				{
					"name": "brush",
					"select": {
						"type": "interval",
						"encodings": ["y"]
					}
				}
			],
			"mark": {
				"type": "bar"
			},
			"encoding": {
				"y": {
					"field": "Country",
					"type": "nominal",
					"sort": "x",
					"axis": null
				},
				"x": {
					"field": "Total_tax_rate",
					"aggregate": "min",
					"axis": null
				},
				"color": {
					"condition": { "param": "brush", "value": "white" },
					"value": "#b4b4b4"
				}
			}
		}
	],
	"config": {
		"style": {
			"cell": {
				"stroke": "transparent"
			}
		},
		"background": "#c6dded"
	}
}
